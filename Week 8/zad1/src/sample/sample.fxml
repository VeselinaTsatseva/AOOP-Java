<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <GridPane hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="113.0" minWidth="10.0" prefWidth="110.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="96.0" minWidth="10.0" prefWidth="90.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name:" />
            <Label text="Phone number:" GridPane.rowIndex="1" />
            <Label text="Email Address:" GridPane.rowIndex="2" />
            <Label prefHeight="17.0" prefWidth="64.0" text="Password:" GridPane.rowIndex="3" />
            <Label prefHeight="17.0" prefWidth="111.0" text="Confirm password:" GridPane.rowIndex="4" />
            <Label fx:id="lblNameError" GridPane.columnIndex="2" />
            <Label fx:id="lblPhoneNumberError" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label fx:id="lblEmailAddressError" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label fx:id="lblPasswordError" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Label fx:id="lblConfirmPasswordError" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <TextField fx:id="txtName" GridPane.columnIndex="1">
               <tooltip>
                  <Tooltip text="t should be containing ONLY letters a- z (upper or lower case) and at least 2 such letterst should be containing ONLY letters a- z (upper or lower case) and at least 2 such letters" />
               </tooltip>
            </TextField>
            <TextField fx:id="txtPhoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <tooltip>
                  <Tooltip text=" it should be of the format (9999) (9999999) i.e. a two groups of digits (4 and 7, respectively) surrounded by parenthesis. it should be of the format (9999) (9999999) i.e. a two groups of digits (4 and 7, respectively) surrounded by parenthesis." />
               </tooltip>
            </TextField>
            <TextField fx:id="txtEmailAddress" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <tooltip>
                  <Tooltip text="it should be legal email address (for instance, check for the following at least- no duplicate @, no spaces inside, no duplicate dots (dots without anything in between) etc.it should be legal email address (for instance, check for the following at least- no duplicate @, no spaces inside, no duplicate dots (dots without anything in between) etc." />
               </tooltip>
            </TextField>
            <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#btnRegisterOnAction" text="Register" GridPane.columnIndex="2" GridPane.rowIndex="5" />
            <PasswordField fx:id="pwdPassword" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <tooltip>
                  <Tooltip text="both entered strings should be identical upon validationboth entered strings should be identical upon validation" />
               </tooltip>
            </PasswordField>
            <PasswordField fx:id="pwdConfirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <tooltip>
                  <Tooltip text="both entered strings should be identical upon validationboth entered strings should be identical upon validation" />
               </tooltip>
            </PasswordField>
         </children>
      </GridPane>
   </children>
</AnchorPane>
